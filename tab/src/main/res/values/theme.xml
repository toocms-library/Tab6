<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <attr name="app_primary_color" format="color" />     <!-- 主题色 -->
    <attr name="app_content_bg_color" format="color" />     <!-- 背景色 -->
    <attr name="app_topbar_left_back_color" format="color" />    <!-- 返回按钮颜色-->
    <attr name="app_list_divider" format="color" />   <!-- 列表分割线颜色-->
    <attr name="app_bottom_tab_segment_height" format="dimension" />
    <attr name="app_bottom_tab_segment_background" format="color" />

    <!-- 选择器标题栏配置 -->
    <attr name="app_picker_topbar_title_color" format="color" />
    <attr name="app_picker_topbar_bg_color" format="color" />
    <attr name="app_picker_button_color" format="color" />

    <!-- 引导页立即体验按钮的边距 -->
    <attr name="app_guide_btn_margin_bottom" format="dimension" />
    <attr name="app_guide_btn_padding_horizontal" format="dimension" />
    <attr name="app_guide_btn_padding_vertical" format="dimension" />
    <attr name="app_guide_btn_view_text_size" format="dimension" />
    <attr name="app_guide_btn_view_text_color" format="color" />
    <attr name="app_guide_btn_view_radius" format="dimension" />

    <!-- 地图页样式配置 -->
    <attr name="app_map_left_back_drawable_id" format="reference" />
    <attr name="app_map_topbar_background_color" format="color" />
    <attr name="app_map_topbar_title_color" format="color" />
    <attr name="app_map_zoom_level" format="float" />
    <attr name="app_map_marker_drawable_id" format="reference" />
    <attr name="app_map_near_poi_flag_drawable_id" format="reference" />
    <attr name="app_map_search_poi_flag_drawable_id" format="reference" />

    <style name="TooCMS.Compat" parent="QMUI.Compat.NoActionBar">

        <!-- topbar -->
        <item name="qmui_skin_support_topbar_bg">?attr/app_primary_color</item>
        <item name="qmui_skin_support_topbar_title_color">@color/app_topbar_title_color</item>
        <item name="qmui_skin_support_topbar_subtitle_color">@color/app_topbar_subtitle_color</item>
        <item name="qmui_skin_support_topbar_text_btn_color_state_list">
            @color/app_topbar_title_color
        </item>
        <item name="qmui_skin_support_topbar_image_tint_color">@color/app_topbar_title_color</item>
        <item name="QMUITopBarStyle">@style/TooCMS.TopBar</item>

        <!-- tabSegment -->
        <item name="qmui_skin_support_tab_normal_color">?attr/qmui_config_color_gray_6</item>
        <item name="qmui_skin_support_tab_selected_color">?attr/app_primary_color</item>
        <item name="QMUITabSegmentStyle">@style/TooCMS.TabSegment</item>

        <!-- button-->
        <item name="qmui_skin_support_round_btn_bg_color">?attr/app_primary_color</item>
        <item name="qmui_skin_support_round_btn_border_color">?attr/app_primary_color</item>
        <item name="qmui_skin_support_round_btn_text_color">@color/qmui_config_color_white</item>
        <item name="QMUIButtonStyle">@style/TooCMS.RoundButton</item>

        <!-- emptyview -->
        <item name="qmui_empty_view_title_text_size">17sp</item>
        <item name="qmui_empty_view_btn_height">40dp</item>
        <item name="qmui_empty_view_btn_margin_hor">100dp</item>
        <item name="qmui_empty_view_btn_text_size">16sp</item>
        <item name="qmui_empty_view_btn_normal_margin_top">25dp</item>
        <item name="qmui_loading_size">30dp</item>
        <!--        <item name="qmui_skin_support_loading_color">?attr/app_primary_color</item>-->

        <!-- tipDialog -->
        <item name="qmui_tip_dialog_min_height">120dp</item>
        <item name="qmui_tip_dialog_padding_vertical">42dp</item>

        <!-- qmuiDialog -->
        <item name="qmui_dialog_min_width">320dp</item>

        <!-- 主题色 -->
        <item name="app_primary_color">@color/clr_main</item>
        <item name="app_content_bg_color">@color/qmui_config_color_white</item>
        <item name="app_topbar_left_back_color">@color/qmui_config_color_white</item>
        <item name="app_bottom_tab_segment_height">@dimen/bottom_tab_segment_height</item>
        <item name="app_bottom_tab_segment_background">@color/qmui_config_color_white</item>
        <item name="app_list_divider">@color/app_list_divider</item>

        <!-- 选择器 -->
        <item name="app_picker_topbar_title_color">@color/qmui_config_color_black</item>
        <item name="app_picker_topbar_bg_color">@color/picker_view_bg_topbar</item>
        <item name="app_picker_button_color">?attr/app_primary_color</item>

        <!-- 引导页 -->
        <item name="app_guide_btn_margin_bottom">40dp</item>
        <item name="app_guide_btn_padding_horizontal">15dp</item>
        <item name="app_guide_btn_padding_vertical">10dp</item>
        <item name="app_guide_btn_view_text_size">14sp</item>
        <item name="app_guide_btn_view_text_color">@color/qmui_config_color_white</item>
        <item name="app_guide_btn_view_radius">0dp</item>

        <!-- 地图 -->
        <item name="app_map_left_back_drawable_id">@drawable/topbar_left_back</item>
        <item name="app_map_topbar_background_color">?attr/app_primary_color</item>
        <item name="app_map_topbar_title_color">@color/app_topbar_title_color</item>
        <item name="app_map_zoom_level">18</item>
        <!--        <item name="app_map_marker_drawable_id">0</item>-->
        <!--        <item name="app_map_near_poi_flag_drawable_id">0</item>-->
        <!--        <item name="app_map_search_poi_flag_drawable_id">0</item>-->

    </style>

    <style name="TooCMS.TopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_left_back_drawable_id">@drawable/topbar_left_back</item>
        <item name="qmui_topbar_height">@dimen/topbar_height_size</item>
        <item name="qmui_topbar_image_btn_height">@dimen/topbar_height_size</item>
        <item name="qmui_topbar_title_text_size">@dimen/topbar_title_size</item>
        <item name="qmui_topbar_title_bold">true</item>
        <item name="qmui_topbar_text_btn_bold">true</item>
    </style>

    <style name="TooCMS.RoundButton" parent="QMUI.RoundButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="qmui_isRadiusAdjustBounds">false</item>
        <item name="qmui_radius">5dp</item>
    </style>

    <style name="TooCMS.TabSegment" parent="QMUI.TabSegment">
        <item name="qmui_tab_normal_text_size">12sp</item>
        <item name="qmui_tab_selected_text_size">12sp</item>
        <item name="qmui_tab_icon_position">top</item>
    </style>
</resources>