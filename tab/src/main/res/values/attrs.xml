<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="requestFocus" format="boolean" />
    <attr name="itemView" format="reference" />
    <attr name="items" format="reference" />
    <attr name="adapter" format="reference" />

    <attr name="onScrollChangeCommand" format="reference" />
    <attr name="onScrollStateChangedCommand" format="reference" />
    <attr name="url" format="string" />
    <attr name="onTouchCommand" format="reference" />

    <attr name="onClickCommand" format="reference" />
    <attr name="onLongClickCommand" format="reference" />
    <attr name="onFocusChangeCommand" format="reference" />
    <attr name="isThrottleFirst" format="boolean" />
    <attr name="currentView" format="reference" />
    <attr name="isVisible" format="boolean" />

    <declare-styleable name="View">
        <attr name="onClickCommand" />
        <attr name="onLongClickCommand" />
        <attr name="onFocusChangeCommand" />
        <attr name="onTouchCommand" />
        <attr name="isThrottleFirst" />
        <attr name="currentView" />
    </declare-styleable>

    <declare-styleable name="AdapterView">
        <attr name="itemView" />
        <attr name="items" />
        <attr name="adapter" />
        <attr name="dropDownItemView" format="reference" />
        <attr name="itemIds" format="reference" />
        <attr name="itemIsEnabled" format="reference" />
        <attr name="onScrollStateChangedCommand" />
        <attr name="onScrollChangeCommand" />
        <attr name="onLoadMoreCommand" format="reference" />
    </declare-styleable>

    <declare-styleable name="TextView">
        <attr name="beforeTextChangedCommand" format="reference" />
        <attr name="onTextChangedCommand" format="reference" />
        <attr name="afterTextChangedCommand" format="reference" />
        <attr name="textChanged" format="reference" />
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="url" />
        <attr name="request_width" format="integer" />
        <attr name="request_height" format="integer" />
        <attr name="placeholderRes" format="reference|color" />
        <attr name="onSuccessCommand" format="reference" />
        <attr name="onFailureCommand" format="reference" />
    </declare-styleable>

    <declare-styleable name="ViewGroup">
        <attr name="itemView" />
        <attr name="observableList" format="reference" />
    </declare-styleable>

    <declare-styleable name="RecyclerView" parent="AdapterView">
        <attr name="lineManagerFactory" format="reference" />
        <attr name="spanSizeLookup" format="reference" />
        <attr name="itemBinding" format="reference" />
        <attr name="layoutManagerFactory" format="reference" />
        <attr name="itemAnimator" format="reference" />
    </declare-styleable>

    <declare-styleable name="SmartRefreshLayout">
        <attr name="onRefreshCommand" />
        <attr name="onLoadMoreCommand" />
    </declare-styleable>

    <declare-styleable name="RadioGroup">
        <attr name="onCheckedChangedCommand" format="reference" />
    </declare-styleable>

    <declare-styleable name="Spinner">
        <attr name="itemDatas" format="reference" />
        <attr name="valueReply" format="string" />
        <attr name="resource" format="integer" />
        <attr name="dropDownResource" format="integer" />
        <attr name="onItemSelectedCommand" format="reference" />
    </declare-styleable>

    <declare-styleable name="Switch">
        <attr name="onCheckedChangeCommand" format="reference" />
        <attr name="switchState" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ListView" parent="AdapterView">
        <attr name="onItemClickCommand" format="reference" />
    </declare-styleable>

    <declare-styleable name="ViewPager">
        <attr name="itemView" />
        <attr name="items" />
        <attr name="adapter" />
        <attr name="pageTitles" format="reference" />
        <attr name="onPageScrolledCommand" format="reference" />
        <attr name="onPageSelectedCommand" format="reference" />
        <attr name="onPageScrollStateChangedCommand" format="reference" />
    </declare-styleable>

    <declare-styleable name="NestedScrollView">
        <attr name="onScrollChangeCommand" />
    </declare-styleable>

    <declare-styleable name="SimpleDraweeView">
        <attr name="url" />
    </declare-styleable>

    <declare-styleable name="ScrollView">
        <attr name="onScrollChangeCommand" />
    </declare-styleable>

    <declare-styleable name="SwipeRefreshLayout">
        <attr name="onRefreshCommand" format="reference" />
        <attr name="refreshing" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WebView">
        <attr name="render" format="string" />
    </declare-styleable>

    <declare-styleable name="ControlDistributeLinearLayout">
        <attr name="distribute_event" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BaseImageBanner">
        <attr name="items" />
        <attr name="columnNum" format="integer" />
        <attr name="selectColor" format="color" />
        <attr name="unSelectColor" format="color" />
        <attr name="onItemClickCommand" />
    </declare-styleable>

    <!--=========================================================== View  ==============================================================-->

    <declare-styleable name="XNumberProgressBar">
        <attr name="xnpb_current" format="integer" />
        <attr name="xnpb_max" format="integer" />
        <attr name="xnpb_unreached_color" format="color" />
        <attr name="xnpb_reached_color" format="color" />
        <attr name="xnpb_reached_bar_height" format="dimension" />
        <attr name="xnpb_unreached_bar_height" format="dimension" />
        <attr name="xnpb_text_size" format="dimension" />
        <attr name="xnpb_text_color" format="color" />
        <attr name="xnpb_text_offset" format="dimension" />
        <attr name="xnpb_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PictureAdderView">
        <attr name="spacing" format="dimension" />
        <attr name="numColumns" format="dimension" />
        <attr name="maxSelectNum" format="dimension" />
        <attr name="videoMaxSecond" format="dimension" />
        <attr name="recordVideoSecond" format="dimension" />
        <attr name="chooseMode">
            <flag name="all" value="0" />
            <flag name="image" value="1" />
            <flag name="video" value="2" />
            <flag name="audio" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PayPwdView">
        <attr name="count" format="integer" />
        <attr name="border_color" format="color" />
        <attr name="divider_color" format="color" />
        <attr name="dot_color" format="color" />
    </declare-styleable>

    <!--============================Banner=========================================-->

    <!-- BaseBanner -->
    <declare-styleable name="BaseBanner">
        <!-- Banner高宽比,范围0-1,默认0.5(for LoopViewPager)-->
        <attr name="bb_scale" format="float" />

        <!--for LoopViewPager start-->
        <!-- 是否支持循环,默认true-->
        <attr name="bb_isLoopEnable" format="boolean" />
        <!-- 滚动延时,默认5秒-->
        <attr name="bb_delay" format="integer" />
        <!-- 滚动间隔,默认5秒-->
        <attr name="bb_period" format="integer" />
        <!-- 是否支持自动滚动,默认true-->
        <attr name="bb_isAutoScrollEnable" format="boolean" />
        <!--for LoopViewPager end-->

        <!-- 设置底部背景条颜色,默认透明 -->
        <attr name="bb_barColor" format="color" />
        <!-- 设置当滚动到最后一个item时是否显示底部背景条 -->
        <attr name="bb_isBarShowWhenLast" format="boolean" />
        <!-- 设置底部背景条padding,单位dp -->
        <attr name="bb_barPaddingLeft" format="dimension" />
        <attr name="bb_barPaddingTop" format="dimension" />
        <attr name="bb_barPaddingRight" format="dimension" />
        <attr name="bb_barPaddingBottom" format="dimension" />
        <!-- 设置标题文字颜色,默认"#ffffff" -->
        <attr name="bb_textColor" format="color" />
        <!-- 设置标题文字大小,单位sp,默认14sp -->
        <attr name="bb_textSize" format="dimension" />
        <!-- 设置是否显示标题,默认true  -->
        <attr name="bb_isTitleShow" format="boolean" />
        <!-- 设置是否显示指示器,默认true  -->
        <attr name="bb_isIndicatorShow" format="boolean" />
        <!-- 设置指示器位置.默认Gravity.CENTER时文字不显示-->
        <attr name="bb_indicatorGravity" format="enum">
            <enum name="CENTER" value="17" />
            <enum name="LEFT" value="3" />
            <enum name="RIGHT" value="5" />
        </attr>
    </declare-styleable>

    <!-- BaseIndicatorBanner -->
    <declare-styleable name="BaseIndicatorBanner">
        <!-- 设置指示器样式 -->
        <attr name="bb_indicatorStyle" format="enum">
            <!--图片资源-->
            <enum name="DRAWABLE_RESOURCE" value="0" />
            <!--矩形-->
            <enum name="CORNER_RECTANGLE" value="1" />
        </attr>
        <!-- 设置指示器宽度,单位dp,默认6dp -->
        <attr name="bb_indicatorWidth" format="dimension" />
        <!-- 设置指示器高度,单位dp,默认6dp -->
        <attr name="bb_indicatorHeight" format="dimension" />
        <!-- 设置指示器间距,单位dp,默认6dp -->
        <attr name="bb_indicatorGap" format="dimension" />

        <!-- 设置指示器选中颜色,默认"#ffffff" -->
        <attr name="bb_indicatorSelectColor" format="color" />
        <!-- 设置指示器未选中颜色,默认"#88ffffff"  -->
        <attr name="bb_indicatorUnselectColor" format="color" />
        <!-- 设置指示器圆角弧度,单位dp,默认3dp -->
        <attr name="bb_indicatorCornerRadius" format="dimension" />

        <!-- 设置指示器选中drawable资源 -->
        <attr name="bb_indicatorSelectRes" format="reference" />
        <!-- 设置指示器未选中drawable资源 -->
        <attr name="bb_indicatorUnselectRes" format="reference" />
    </declare-styleable>

    <!--RecyclerView实现的banner-->
    <declare-styleable name="RecyclerViewBannerBase">
        <attr name="rvbb_interval" format="integer" />
        <attr name="rvbb_showIndicator" format="boolean" />
        <attr name="rvbb_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="rvbb_autoPlaying" format="boolean" />
        <attr name="rvbb_indicatorSelectedSrc" format="reference" />
        <attr name="rvbb_indicatorUnselectedSrc" format="reference" />
        <attr name="rvbb_indicatorSize" format="dimension" />
        <attr name="rvbb_indicatorSelectedColor" format="color" />
        <attr name="rvbb_indicatorUnselectedColor" format="color" />
        <attr name="rvbb_indicatorSpace" format="dimension" />
        <attr name="rvbb_indicatorMarginLeft" format="dimension" />
        <attr name="rvbb_indicatorMarginRight" format="dimension" />
        <attr name="rvbb_indicatorMarginBottom" format="dimension" />
        <attr name="rvbb_indicatorGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="BannerLayout">
        <!--轮播间隔，单位ms，默认是4000ms-->
        <attr name="bl_interval" format="integer" />
        <!--是否显示轮播索引，默认是true-->
        <attr name="bl_showIndicator" format="boolean" />
        <!--轮播的方向，默认是horizontal-->
        <attr name="bl_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <!--是否是自动轮播，默认是true-->
        <attr name="bl_autoPlaying" format="boolean" />
        <!--轮播索引选中的效果-->
        <attr name="bl_indicatorSelectedSrc" format="reference" />
        <!--轮播索引未选中的效果-->
        <attr name="bl_indicatorUnselectedSrc" format="reference" />
        <!--轮播索引的大小，默认5dp-->
        <attr name="bl_indicatorSize" format="dimension" />
        <!--轮播索引选中的颜色-->
        <attr name="bl_indicatorSelectedColor" format="color" />
        <!--轮播索引未选中的颜色-->
        <attr name="bl_indicatorUnselectedColor" format="color" />
        <!--索引器之间的间隔，默认4dp-->
        <attr name="bl_indicatorSpace" format="dimension" />
        <!--索引器的左侧边距，默认16dp-->
        <attr name="bl_indicatorMarginLeft" format="dimension" />
        <!--索引器的右侧边距，默认0dp-->
        <attr name="bl_indicatorMarginRight" format="dimension" />
        <!--索引器的底部边距，默认11dp-->
        <attr name="bl_indicatorMarginBottom" format="dimension" />
        <!--索引器的对齐方式，默认left-->
        <attr name="bl_indicatorGravity" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <!--轮播图之间的间距，默认是10dp-->
        <attr name="bl_itemSpace" format="dimension" />
        <!--图片缩放系数，默认是1.2F-->
        <attr name="bl_centerScale" format="float" />
        <!--轮播速度，默认是1.0F-->
        <attr name="bl_moveSpeed" format="float" />
    </declare-styleable>
    <attr name="BannerLayoutStyle" format="integer" />
</resources>