<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
        android:id="@+id/tv_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_bg_button_corner_black"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:text="@string/guide_jump"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="12sp" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaTextView
        android:id="@+id/tv_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="?attr/app_guide_btn_margin_bottom"
        android:background="@drawable/shape_bg_button_corner_white"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="?attr/app_guide_btn_padding_horizontal"
        android:paddingTop="?attr/app_guide_btn_padding_vertical"
        android:paddingEnd="?attr/app_guide_btn_padding_horizontal"
        android:paddingBottom="?attr/app_guide_btn_padding_vertical"
        android:text="@string/guide_try_immediately"
        android:textColor="?attr/app_guide_btn_view_text_color"
        android:textSize="?attr/app_guide_btn_view_text_size" />
</RelativeLayout>