<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/crash_horizontal_margin"
            android:paddingTop="@dimen/crash_vertical_margin"
            android:paddingRight="@dimen/crash_horizontal_margin"
            android:paddingBottom="@dimen/crash_vertical_margin">

            <ImageView
                android:id="@+id/crash_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_crash_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/crash_vertical_margin"
                android:gravity="center"
                android:text="@string/crash_occurred_explanation"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/crash_restart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/crash_vertical_margin2"
                android:text="@string/crash_close_app" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/crash_more_info_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/crash_vertical_margin"
                android:text="@string/crash_details" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>