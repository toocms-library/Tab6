<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/app_picker_topbar_bg_color">

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_transparent"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/picker_view_topbar_padding"
        android:text="@string/picker_view_cancel"
        android:textColor="?attr/app_picker_button_color"
        android:textSize="@dimen/picker_md_button_textsize"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnSubmit"
        android:layout_toEndOf="@+id/btnCancel"
        android:gravity="center"
        android:textColor="?attr/app_picker_topbar_title_color"
        android:textSize="@dimen/picker_size_title_text"
        app:layout_constraintEnd_toStartOf="@id/btnSubmit"
        app:layout_constraintStart_toEndOf="@id/btnCancel" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_transparent"
        android:gravity="end|center_vertical"
        android:paddingEnd="@dimen/picker_view_topbar_padding"
        android:text="@string/picker_view_submit"
        android:textColor="?attr/app_picker_button_color"
        android:textSize="@dimen/picker_md_button_textsize"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
